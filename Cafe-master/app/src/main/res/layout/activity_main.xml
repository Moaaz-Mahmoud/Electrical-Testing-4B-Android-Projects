<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/Rel1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-95dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Your email"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/ShoppingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameText"
            android:layout_marginLeft="10dp"
            android:text="Toppings"
            android:textSize="25dp" />

        <CheckBox
            android:id="@+id/CreamCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ShoppingView"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:text="Whipped Cream"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/ChocalateCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CreamCheck"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Chocolate"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/QuantityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ChocalateCheck"
            android:layout_marginLeft="10dp"
            android:text="Quantity"
            android:textSize="25dp" />

        <Button
            android:id="@+id/minusBut"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/QuantityView"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:textSize="15dp"
            android:background="@color/purple_500"/>

        <Button
            android:id="@+id/plusBut"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/QuantityView"
            android:layout_marginLeft="100dp"
            android:text="+"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/OrderNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/QuantityView"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textSize="25dp" />

        <Button
            android:id="@+id/orderBut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/plusBut"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="339dp"
            android:layout_marginRight="10dp"
            android:background="#F99018"
            android:text="Order Now"
            android:textSize="24sp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>